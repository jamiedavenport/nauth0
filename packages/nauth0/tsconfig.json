{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": ["src"],
  "exclude": ["**/*.test.*", "node_modules", "dist"]
}
